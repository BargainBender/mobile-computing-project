<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.midtermproject">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MidtermProject"
        tools:targetApi="31">
        <activity
            android:name=".firebasecrud.FirebaseCRUDActivity"
            android:exported="false"
            android:label="@string/main_act_btn_goto_todo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.MidtermProject.NoActionBar"/>
        <activity
            android:name=".aboutme.AboutMeActivity"
            android:exported="false"
            android:label="@string/main_act_btn_goto_about_me"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".basicmath.BasicMathActivity"
            android:exported="false"
            android:label="@string/basic_math_act_activity_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".stringmanipulation.StringManipulationActivity"
            android:exported="false"
            android:label="@string/string_man_act_activity_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".layoutdemo.LayoutDemoActivity"
            android:exported="false"
            android:label="@string/layout_demo_act_activity_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>